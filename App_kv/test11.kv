                    size: self.size
            text:'About Tour'
            size_hint: 1, 0.6
            pos_hint: {'right':1}

        Button:
            background_color: (0.2, 0.5, 0.8, 0.5)
            text:'Back to Main'
            size_hint:(0.3, 0.1)
            pos_hint: {'center_x': 0.8, 'center_y': 0.1}
            on_press: root.convert2m()

        Button:
            background_color: (0.2, 0.5, 0.8, 0.3)
            text:'Back to Main'
            size_hint:(0.3, 0.1)
            pos_hint: {'center_x': 0.8, 'center_y': 0.2}
