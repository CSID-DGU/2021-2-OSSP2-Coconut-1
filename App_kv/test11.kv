<windowManager>:
    MainScreen:
    ResultScreen:


<MainScreen>:
    name: 'main'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "testlogo.jpg"
    GridLayout:
        cols:2
        pos_hint: {"top": 0.85, "right": 1.25}
        Spinner:
            id: main_drop
            size_hint: None, None
            size: 200, 50
            pos_hint:{'top': 1}
            text: 'Select City'
            values: root.values_dict.keys()
            on_text:
                root.values_update(self.text)

        Spinner:
            id: sub_drop
            size_hint: None, None
            size: 230, 50
            pos_hint:{'top': 1}
            values: root.sub_values
            
    FloatLayout:
        Button:
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.8, 'center_y': 0.1}
            text: "Submit"
            on_press: root.convert2r()
            
        Button:
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.2, 'center_y': 0.1}
            text: "Exit"
            on_press: root.onExit()
    

<ResultScreen>:
    name: 'result'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "testlogo.jpg"
    GridLayout:
        rows: 5
        size_hint: 0.5, 0.55
        pos_hint: {"top": 0.8, "right": 0.5}
        Button:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "First Recommend ->"
            display: None
            on_press: root.convert2t()

        Button:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "Second Recommend ->"
            display: None
            on_press: root.convert2t()    

        Button:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "Third Recommend ->"
            display: None
            on_press: root.convert2t() 

        Button:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "Fourth Recommend ->"
            display: None
            on_press: root.convert2t() 

        Button:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "Fifth Recommend ->"
            display: None
            on_press: root.convert2t() 

    FloatLayout:
        Button:
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            text: "Back to Main"
            on_press: root.convert2m()

        Spinner:
            id: resource
            size_hint: None, None
            size: 200, 50
            pos_hint:{'top': 0.95, 'right': 0.6}
            text: 'Select Resource'
            values: root.resource_value


<ThirdScreen>:
    name:'third'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "testlogo.jpg"


    FloatLayout:
        Label:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
