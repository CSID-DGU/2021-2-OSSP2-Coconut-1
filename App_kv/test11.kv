<windowManager>:
    MainScreen:
    ResultScreen:


<MainScreen>:
    name: 'main'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "testlogo.jpg"
    GridLayout:
        cols:2
        pos_hint: {"top": 0.85, "right": 1.25}
        Spinner:
            id: main_drop
            size_hint: None, None
            size: 200, 50
            pos_hint:{'top': 1}
            text: 'Select City'
            values: root.values_dict.keys()
            on_text:
                root.values_update(self.text)

        Spinner:
            id: sub_drop
            size_hint: None, None
            size: 230, 50
            pos_hint:{'top': 1}
            values: root.sub_values
            
    FloatLayout:
        Button:
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.8, 'center_y': 0.1}
            text: "Submit"
            on_press: root.convert2r()
            
        Button:
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.2, 'center_y': 0.1}
            text: "Exit"
            on_press: root.onExit()
    

