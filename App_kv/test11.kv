

<WindowManager>:
    MainScreen:
    ResultScreen:
    ThirdScreen:

<MainScreen>:
    name:'main'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "testlogo.jpg"
    GridLayout:
        cols:2
        pos_hint: {"top": 0.85, "right": 1.25}
        Spinner:
            id: main_drop
            size_hint: None, None
            size: 180, 50
            pos_hint:{'top': 1}
            text: 'Select City'
            values: root.values_dict.keys()
            on_text:
                root.values_update(self.text)

        Spinner:
            id: sub_drop
            size_hint: None, None
            size: 180, 50
            pos_hint:{'top': 1}
            text: ''
            values: root.sub_values

            
    FloatLayout:
        Button:
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.8, 'center_y': 0.1}
            text: "Submit"
            on_press: 
                root.convert2r()
                root.manager.get_screen('result').ids.CityState.text = root.ids.main_drop.text + '-' + root.ids.sub_drop.text
                root.manager.get_screen('third').ids.CityState2.text = root.ids.main_drop.text + '-' + root.ids.sub_drop.text
                #root.manager.get_screen('result').ids.key1.text = app.
                

            
        Button:
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.2, 'center_y': 0.1}
            text: "Exit"
            on_press: root.onExit()
    

<ResultScreen>:
