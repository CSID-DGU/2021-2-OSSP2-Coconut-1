            background_color: 0.2, 0.2, 0.5, 0.8   
            on_press: root.convert2m()

        Button:
            size_hint: (0.3, 0.1)
            pos_hint: {'center_x': 0.8, 'center_y': 0.1}
            text: "Show Recommend"
            background_color: 0.2, 0.2, 0.5, 0.8   
            on_press: root.ids.recom.disabled = False

        
        Label:
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.5, 0.8     
